<h3>Want to create you first framework?</h3>

<%= form_with model: @framework do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>

<h3>My frameworks</h3>
<div>
    <% current_user.frameworks.each do |item| %>
        <p>
            <%= item.title %> <br>
            <%= item.description %>
        </p>
    <% end %>
</div>